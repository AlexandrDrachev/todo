
.side-bar-container
  position absolute
  left -20px
  top 15px
  z-index 2
  .side-bar
    min-width 190px
    min-height 350px
    margin 0 20px
    padding 5px
    display flex
    flex-direction column
    align-items flex-start
    justify-content flex-start
    box-shadow 0 0 10px white
    border-radius 3px
    background rgba(0, 0, 0, 0.75)
    color orangered
    .user-item
      display flex
      justify-content flex-start
      //box-shadow 0 0 5px darkorange
      margin 3px
      padding 3px
      border-radius 2px
      color white
      font-weight bold
      &:hover
        cursor pointer
        transform scale(1.1)
        transition 0.5
        box-shadow 0 0 5px darkorange
      .div-ava
        width 25px
        height 25px
        margin-right 3px
        .sidebar-avatar
          width 100%
          height 100%