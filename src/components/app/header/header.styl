.header
  width 95%
  height 130px
  margin 10px
  padding 5px
  box-shadow 0 0 10px white
  border-radius 3px
  display flex
  justify-content space-between
  color white
  h3
    margin 30px 10px 0 10px
    font-weight bold
    color orangered
    font-size 50px
    &:hover
      cursor pointer
  .user-login-details
    display flex
    flex-direction column
    align-items flex-end
    margin 5px 10px
    .user-exit
      font-weight bold
      color red
      &:hover
        cursor pointer
    .user-login
      font-weight bold
      font-size 20px
      color chartreuse